<h2 class="pin-infobox-title">Create New Pin</h2>
<fieldset class="pin-infobox-fieldset">
  <legend>Pin Details</legend>
  <label for="pin-infobox-name">Name:</label>
  <input type="text" id="pin-infobox-name" name="name" maxlength="30" placeholder="Max 30 characters"><br><br>
  <label for="pin-infobox-description">Description</label><br>
  <textarea id="pin-infobox-description" name="description" rows="4" cols="28" maxlength="200" placeholder="Max 200 characters"></textarea><br>
  <div class="pin-infobox-buttons-container">
    <button type="button" name="cancel">Cancel</button>
    <button type="button" name="save">Save</button>
  </div>
</fieldset>
